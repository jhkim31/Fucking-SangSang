<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainPageFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/recpurple"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="vertical"
            android:weightSum="40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="@color/header"
                android:orientation="horizontal"
                android:weightSum="20">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/mainPageToday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="19"
                    android:fontFamily="@font/bold"
                    android:gravity="center|left"
                    android:text="MadPT"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"></Space>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:orientation="horizontal"
                android:weightSum="20">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="18"
                    android:background="@drawable/round_layout_summary"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="20dp"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="7"
                            android:orientation="horizontal"
                            android:weightSum="10">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="vertical"
                                android:weightSum="5">

                                <TextView
                                    android:id="@+id/eat_kcal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="3.7"
                                    android:fontFamily="@font/bold"
                                    android:gravity="center|bottom"
                                    android:text="1024"
                                    android:textColor="@color/black"
                                    android:textSize="17dp" />

                                <TextView
                                    android:id="@+id/eat_kcal_int"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center|top"
                                    android:text="섭취량"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:orientation="vertical"
                                android:weightSum="5">


                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="4">

                                    <com.github.lzyzsd.circleprogress.ArcProgress
                                        android:id="@+id/arc_progress"
                                        android:layout_width="110dp"
                                        android:layout_height="110dp"
                                        android:background="@color/white"
                                        app:arc_finished_color="@color/exKcal_purple"
                                        app:arc_max="100000"
                                        app:arc_progress="0"
                                        app:arc_suffix_text="Kcal"
                                        app:arc_suffix_text_padding="1dp"
                                        app:arc_suffix_text_size="10dp"
                                        app:arc_text_color="@color/black"
                                        app:arc_text_size="20dp"
                                        app:arc_unfinished_color="@color/black"

                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.494"
                                        app:layout_constraintStart_toStartOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center|top"
                                    android:text="잔여량"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:orientation="vertical"
                                android:weightSum="5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.3"
                                    android:orientation="horizontal"
                                    android:weightSum="10">

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"></Space>

                                    <Button
                                        android:id="@+id/goal_button"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="6"
                                        android:background="@drawable/round_layout_summary_button"
                                        android:gravity="center"
                                        android:text="목표"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"></Button>

                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"></Space>
                                </LinearLayout>


                                <TextView
                                    android:id="@+id/move_kcal"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="2.4"
                                    android:fontFamily="@font/bold"
                                    android:gravity="center|bottom"
                                    android:text="500"
                                    android:textColor="@color/black"
                                    android:textSize="17dp" />

                                <TextView
                                    android:id="@+id/move_kcal_int"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center|top"
                                    android:text="활동량"
                                    android:textColor="@color/black" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:orientation="horizontal"
                            android:weightSum="20">

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7"
                                android:orientation="vertical"
                                android:weightSum="10">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="6">

                                    <ImageButton
                                        android:id="@+id/plus_button_weight"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="7"
                                        android:background="@android:color/transparent"
                                        android:padding="0dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/plus_button"
                                        android:visibility="invisible" />

                                    <Button
                                        android:id="@+id/user_weight"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#00ff0000"
                                        android:fontFamily="@font/bold"
                                        android:gravity="center"
                                        android:text="12kg"
                                        android:textColor="@color/black"
                                        android:textSize="17dp"
                                        android:visibility="visible" />

                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_gravity="top"
                                    android:layout_weight="4"
                                    android:gravity="center"
                                    android:text="몸무게"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3" />

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7">

                                <LinearLayout
                                    android:id="@+id/weight_goal_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="10">

                                    <TextView
                                        android:id="@+id/goal_text"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="5"
                                        android:gravity="center|bottom"
                                        android:text="목표 몸무게까지"
                                        android:textColor="@color/black"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/goal_distance"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="5"
                                        android:gravity="center|top"
                                        android:text="-14KG"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        android:visibility="visible" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/post_goal_distance"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:fontFamily="@font/bold"
                                    android:gravity="center"
                                    android:text="목표를 입력해주세요"
                                    android:textColor="@color/white"
                                    android:visibility="invisible" />
                            </FrameLayout>

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:weightSum="20">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="18"
                android:orientation="vertical"
                android:weightSum="20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="16"
                    android:background="@drawable/round_layout_summary"
                    android:orientation="horizontal"
                    android:weightSum="20">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/fire" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="16"
                        android:background="@drawable/round_layout_summary"
                        android:gravity="center|left"
                        android:fontFamily="@font/notosan_bold"
                        android:text="현재 1000Kcal 태우기 챌린지 도전중"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:orientation="vertical"
            android:weightSum="60">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:orientation="horizontal"
                android:weightSum="20">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.5"
                    android:background="@drawable/round_layout_summary"
                    android:orientation="vertical"
                    android:weightSum="20">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3" />

                    <ImageButton
                        android:id="@+id/exercise_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:src="@drawable/weights"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:fontFamily="@font/notosan_bold"
                        android:gravity="center"
                        android:text="운동"
                        android:textColor="@color/black" />

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.5"
                    android:background="@drawable/round_layout_summary"
                    android:orientation="vertical"
                    android:weightSum="20">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3" />

                    <ImageButton
                        android:id="@+id/diet_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:src="@drawable/dinner"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:fontFamily="@font/notosan_bold"
                        android:gravity="center"
                        android:text="식단"
                        android:textColor="@color/black" />

                </LinearLayout>


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:orientation="horizontal"
                android:weightSum="20">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.5"
                    android:background="@drawable/round_layout_summary"
                    android:orientation="vertical"
                    android:weightSum="20">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3" />

                    <ImageButton
                        android:id="@+id/trainer_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:src="@drawable/personal"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:fontFamily="@font/notosan_bold"
                        android:gravity="center"
                        android:text="트레이너"
                        android:textColor="@color/black" />

                </LinearLayout>


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.5"
                    android:background="@drawable/round_layout_summary"
                    android:orientation="vertical"
                    android:weightSum="20">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3" />

                    <ImageButton
                        android:id="@+id/static_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:src="@drawable/statistic"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:fontFamily="@font/notosan_bold"
                        android:gravity="center"
                        android:text="통계"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".training.trainingCamera.TrainingAiCameraActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/surfaceView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.08"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currentExcrcise"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    app:layout_anchor="@+id/surfaceView"
                    app:layout_anchorGravity="left" />

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    app:layout_anchor="@+id/linearLayout"
                    app:layout_anchorGravity="center" />

                <TextView
                    android:id="@+id/reps"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    app:layout_anchor="@+id/surfaceView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.12"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="운동 화이팅!"
                    android:textSize="40sp"
                    app:layout_anchor="@+id/surfaceView"
                    app:layout_anchorGravity="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:layout_gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/showBreakTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:text="@string/break_time_timer"
                        android:visibility="invisible"
                        android:textSize="20sp"
                        app:layout_anchor="@+id/surfaceView"
                        app:layout_anchorGravity="center" />

                    <TextView
                        android:id="@+id/checkFrame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:text="카메라 frame안으로 들어와 주세요!!"
                        android:visibility="invisible"
                        android:textSize="25sp"
                        app:layout_anchor="@+id/surfaceView"
                        app:layout_anchorGravity="center" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/nextExcrcise"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:textAlignment="center"
                    app:layout_anchor="@+id/surfaceView"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sets"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:textAlignment="center"
                    app:layout_anchor="@+id/surfaceView"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>

        <include layout="@layout/bottom_sheet_layout"/>

    </FrameLayout>



</LinearLayout>
